{
  "name": "monkeBLOCK",
  "version": "1.2.3",
  "manifest_version": 2,
  "description": "Pop-Up and Redirect Blocker",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "contextMenus",
    "webNavigation",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./scripts/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./scripts/background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "./scripts/content.js"
  ],
  "browser_action": {
    "default_popup": "./popup.html",
    "default_icon": "./img/monkeBLOCKicon.png"
  },
  "icons": {
    "48": "./img/monkeBLOCKicon.png",
    "32": "./img/monkeBLOCKmain.png",
    "16": "./img/monkeBLOCKicon-greyscale.png"
  }
}